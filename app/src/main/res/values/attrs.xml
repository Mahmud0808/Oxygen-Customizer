<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="preferenceBackgroundColor" format="reference|color" />
    <attr name="preferenceBackgroundColorPressed" format="reference|color" />

    <declare-styleable name="OplusPreference">
        <attr name="clickStyle" format="integer"/>
        <attr name="forcePosition" format="string"/>
        <attr name="tintTitle" format="boolean"/>
        <attr name="centerTitle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="OplusSwitchPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusEditTextPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusListPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="footerPreferenceStyle">
        <attr name="footerPreferenceStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SliderWidget">
        <attr name="titleText" format="string"/>
        <attr name="summaryText" format="string" />
        <attr name="sliderStepSize" format="integer" />
        <attr name="sliderValue" format="integer" />
        <attr name="sliderValueFrom" format="integer" />
        <attr name="sliderValueTo" format="integer" />
        <attr name="valueFormat" />
        <attr name="forcePosition" />
        <attr name="sliderDefaultValue" format="integer" />
        <attr name="isDecimalFormat" />
        <attr name="decimalFormat" />
        <attr name="outputScale" />
        <attr name="hasResetButton" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CategoryWidget">
        <attr name="titleText" />
    </declare-styleable>

    <declare-styleable name="SwitchWidget">
        <attr name="titleText" />
        <attr name="summaryText" />
        <attr name="icon" />
        <attr name="iconSpaceReserved" />
        <attr name="forcePosition" />
        <attr name="drawBackground" format="boolean" />
        <attr name="iconWidth" format="dimension" />
        <attr name="iconHeight" format="dimension" />
        <attr name="isChecked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ColorPickerWidget">
        <attr name="titleText" />
        <attr name="summaryText" />
        <attr name="forcePosition" />
        <attr name="previewColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="ListWidget">
        <attr name="titleText" />
        <attr name="summaryText" />
        <attr name="icon" />
        <attr name="iconSpaceReserved" />
        <attr name="forcePosition" />
        <attr name="entries" format="reference"/>
        <attr name="entryValues" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SearchPreference">
        <attr name="textHint" format="string" />
        <attr name="textNoResults" format="string" />
        <attr name="textClearHistory" format="string" />
    </declare-styleable>

    <declare-styleable name="BackgroundChipPreference">
        <attr name="backgroundChipStyle" format="integer" />
    </declare-styleable>

</resources>